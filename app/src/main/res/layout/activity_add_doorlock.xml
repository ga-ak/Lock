<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDoorlock">

    <TextView
        android:id="@+id/tv_add_doorlock_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="도어락 추가"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <Button
        android:id="@+id/btn_add_doorlock_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="추가"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_doorlock_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_doorlock_confirm"
        app:layout_constraintTop_toTopOf="@+id/btn_add_doorlock_confirm"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_add_doorlock_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="취소"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_doorlock_pw"
        app:layout_constraintVertical_bias="0.505" />

    <TextView
        android:id="@+id/tv_add_doorlock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:text="이 름"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_doorlock_title" />

    <TextView
        android:id="@+id/tv_add_doorlock_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="I P"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_add_doorlock_name"
        app:layout_constraintStart_toStartOf="@+id/tv_add_doorlock_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_doorlock_name" />

    <EditText
        android:id="@+id/edit_add_doorlock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add_doorlock_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_add_doorlock_name"
        app:layout_constraintTop_toTopOf="@+id/tv_add_doorlock_name" />

    <EditText
        android:id="@+id/edit_add_doorlock_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add_doorlock_ip"
        app:layout_constraintEnd_toEndOf="@+id/edit_add_doorlock_name"
        app:layout_constraintStart_toStartOf="@+id/edit_add_doorlock_name"
        app:layout_constraintTop_toTopOf="@+id/tv_add_doorlock_ip" />

    <TextView
        android:id="@+id/tv_add_doorlock_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="PW"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_add_doorlock_ip"
        app:layout_constraintStart_toStartOf="@+id/tv_add_doorlock_ip"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_doorlock_ip" />

    <EditText
        android:id="@+id/edit_add_doorlock_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add_doorlock_pw"
        app:layout_constraintEnd_toEndOf="@+id/edit_add_doorlock_ip"
        app:layout_constraintStart_toStartOf="@+id/edit_add_doorlock_ip"
        app:layout_constraintTop_toTopOf="@+id/tv_add_doorlock_pw" />


</android.support.constraint.ConstraintLayout>